<%= render 'shared/navbar' %>

<div class="song-card" style="background-image: linear-gradient(208.57deg, rgba(0, 0, 0, 0.5 ), rgba(0, 0, 0, 0.8)), url('<%= @practice.song.album_url %>')">
  <div id="timerContainer">
    <div class="startTimer" >
      <i class="fas fa-play"></i>
    </div>
    <div class="timer">
      <h3>00:00:00</h3>
    </div>
  </div>

  <div class="song-card-info">
    <h3 class="boldify"><%= @practice.song.title %></h3>
    <p class="muted-text"><%= @practice.song.artist.name %></p>
  </div>


</div>

<%= form_for ([@practice,@note]) do |f| %>
  <div class="form-practice-show-container">
    <%= f.text_area :content, placeholder: "make a note" %>
    <%= f.submit "Done", class: "mn-btn mn-btn-primary center" %>
  </div>
<% end %>


<div class="resetTimer">
  <%= link_to "End Practice", new_practice_session_path(@practice), class: 'mn-btn mn-btn-primary bottom-btn' %>
</div>
