
<%= render 'shared/navbar' %>
<div class="d-flex align-items-center">
  <%= link_to root_path do %>
    <p class="mn-btn-circle mn-btn-circle-secondary"><i class="fas fa-arrow-left"></i></p>
  <% end %>
  <h1 class="page-title">Your songs</h1>
</div>
<div class="review-songs">
  <% @practices.each do |practice| %>
    <div class="song-item">
      <%= image_tag practice.song.album_url, alt: practice.song.title %>
      <div class="song-item-info">
        <h2><%= practice.song.title %></h2>
        <p><%= practice.song.artist.name %></p>
      </div>
      <div class="trash">
        <div class="relative">
      <%= link_to "", practice_path(practice), method: :delete, class: "link" %>
        <i class="fas fa-trash-alt"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>
