
<div class="song-card" style="background-image: linear-gradient(208.57deg, rgba(0, 0, 0, 0.5 ), rgba(0, 0, 0, 0.8)), url('<%= @practice.song.album_url %>')">
  <div class="song-card-info">
    <p id="rating-bottom-margin">You Practiced</p>
    <p class="rating-splash-title"><%= @practice.song.title %></p>
    <p id="rating-time">Time: <%= @formatted_time %></p>
  </div>
</div>
<div class="star-form">
  <h1>Rate Your Rehearsal!</h1>
  <%= form_for([@practice, @session]) do |f| %>
    <div class="star-row">
      <%= radio_button_tag(:star, "5") %>
      <%= label_tag(:star_5, "") %>
      <%= radio_button_tag(:star, "4") %>
      <%= label_tag(:star_4, "") %>
      <%= radio_button_tag(:star, "3") %>
      <%= label_tag(:star_3, "") %>
      <%= radio_button_tag(:star, "2") %>
      <%= label_tag(:star_2, "") %>
      <%= radio_button_tag(:star, "1") %>
      <%= label_tag(:star_1, "") %>
    </div>
    <%= hidden_field_tag(:time, @time) %>
    <%= f.submit "Finish Rehearsal", class: "mn-btn mn-btn-primary bottom-btn" %>
<% end %>
</div>
