<%= render 'shared/navbar' %>


<div class="container">
    <div class="song-list">
      <h1 class="page-title">Pick a song to learn</h1>
      <%= form_tag learn_path, method: :get do %>
      <%= text_field_tag 'term', params[:term], placeholder: "Enter a song title" %>
      <%= submit_tag 'Search' %>
      <% end -%>
      <% @unlearned.each do |practice| %>
        <div class="song-item">
          <img src="<%= practice.song.album_url %>" alt="<%= practice.song.title %>">
          <div class="song-item-info">
            <input type="hidden" name="practice_id" value='<%= practice.id %>'>
            <input type="radio" style="display: none" name="radios" id="choice">
            <h2 class="boldify"><%= practice.song.title %></h2>
            <p class="muted-text"><%= practice.song.artist.name %></p>
          </div>
          <%= link_to "", practice, class: "song-item-link" %>
        </div>
      <% end %>
  </div>
</div>
<%= link_to "+", imports_path, class: "mn-btn-circle botom-right-corner"  %>
