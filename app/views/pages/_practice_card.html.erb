<% unless practice %>
  <div class="practice-card sad">
    <div class="message">
      <%= image_tag('mn-logo')%>
      <h1 class="boldify">Nothing left to review!</h1>
      <h3 class="muted-text">Select a song to learn!</h3>
  </div>
  </div>
<% else %>
  <div class="practice-card" style="background-image: linear-gradient(208.57deg, rgba(0, 0, 0, 0.5 ), rgba(0, 0, 0, 0.8)), url('<%= practice.song.album_url %>')">
    <h3 class="title-space muted-text">Up next to practice</h3>
    <div class="details">
      <h1 class="boldify"><%= practice.song.title %></h1>
      <h3 class="muted-text"><%= practice.song.artist.name %></h3>
    </div>
    <%= link_to "Practice", practice_path(practice.id), class: "practice-btn"  %>
  </div>
<% end %>
