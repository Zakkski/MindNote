<% if practices.empty? %>
  <div class="practice-card sad">
    <h1>Select a song to start!</h1>
  </div>
<% else %>
  <div class="practice-card">
    <h1>Up next to practice:</h1>
    <div class="info">
      <h2></h2>
      <div class="details">
        <h1><%= practices.first.song %></h1>
        <h3> <%= practices.first.song.artis %> </h3>
        <p>Tap to practice</p>
      </div>
    </div>
  </div>

  <% end %>
