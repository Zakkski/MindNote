<%= render 'shared/navbar' %>

<h1 class="center-30 header-1"><%= @practice.song.title %> Notes</h1>
  <% if @notes.empty? %>
    <h1>You have no notes for this song</h1>
  <% else %>
    <div class="notes-list">
      <% @notes.each do |note| %>
        <div class="note">
          <p class="note-content"><%= note.content %></p>
          <i class="far fa-edit">
            <%= link_to "", practice_note_path(@practice, note), class: "link" %>
          </i>
        </div>
        <div class="line"></div>
    <% end %>
    </div>
  <% end %>
